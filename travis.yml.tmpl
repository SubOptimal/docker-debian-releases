---
dist: xenial
addons: { apt: { packages: [ debootstrap, qemu-user-static ] } }
language: generic
env:
  {{ range $repo := . -}}
  {{ if $repo.Version -}}
  {{ range $a := $repo.Architectures -}}
  {{ if (eq (stringsIndex $repo.Suite "-") -1) -}}
  - MIRROR={{$repo.Origin}} V={{$repo.Version}} DIST={{$repo.Suite}} ARCH={{$a}} # {{$repo.Date}} - {{$repo.URL}}
  {{ end -}}
  {{ end -}}
  {{ end -}}
  {{ end -}}
script: ./travis-script.sh
jobs:
  include:
    - name: omnilint
      env: [ OMNILINT=true ]
      install: docker pull lpenz/omnilint
      script: docker run --rm -v "$PWD:$PWD" -e "RWD=$PWD" -e "MY_UID=$UID" lpenz/omnilint
